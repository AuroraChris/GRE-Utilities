	<div id="container" class="wordlist">
		<h1>Word List<i class="fas fa-pencil-alt"></i></h1>
		<input type="text" placeholder="Add New Word">
		<ul id="scrollit">
			<% if (wrongWord && wrongWord.length > 0) {  %>
			<% for (var i = 0; i < wrongWord.length; i++) {  %>
			<li>
				<span id="trash"><i class="fas fa-trash-alt"></i></span>
				<span id="word"><%= wrongWord[i] %></span>
				<a href="/searchresult"><span id="search" class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
			</li>
			<% }  %>
			<%  } else {  %>
			<% for (var i = 0; i < wordsinlist.length; i++) { %>
			<li>
				<span id="trash"><i class="fas fa-trash-alt"></i></span>
				<span id="word"><%= wordsinlist[i].English %></span>
				<a href="/searchresult"><span id="search" class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
			</li>
			<%	}  %>
			<% } %>
		</ul>
	</div>
	
